<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">

        <attr name="cb_background_pressed" format="color" />
        <attr name="cb_background_disabled" format="color" />
        <attr name="cb_background" format="color" />
        <attr name="cb_background_state_list" format="color" />

        <attr name="cb_text_color_pressed" format="color" />
        <attr name="cb_text_color_disabled" format="color" />
        <attr name="cb_text_color" format="color" />
        <attr name="cb_text_size" format="dimension" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="cb_text_padding" format="dimension" />
        <attr name="cb_text_padding_left" format="dimension" />
        <attr name="cb_text_padding_top" format="dimension" />
        <attr name="cb_text_padding_right" format="dimension" />
        <attr name="cb_text_padding_bottom" format="dimension" />
        <attr name="cb_text_weight" format="integer" />

        <attr name="cb_shape_radius" format="dimension" />
        <attr name="cb_shape_type" format="integer">
            <enum name="rect" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <attr name="cb_frame_color_pressed" format="color" />
        <attr name="cb_frame_color_disabled" format="color" />
        <attr name="cb_frame_color" format="color" />
        <attr name="cb_frame_size" format="dimension" />
        <attr name="cb_frame_state_list" format="color" />

        <attr name="cb_elevation_enabled" format="boolean" />

        <attr name="cb_image_position" format="integer">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="cb_image" format="reference" />
        <attr name="cb_image_normal" format="reference" />
        <attr name="cb_image_disabled" format="reference" />
        <attr name="cb_image_pressed" format="reference" />
        <attr name="cb_image_padding" format="dimension" />
        <attr name="cb_image_padding_left" format="dimension" />
        <attr name="cb_image_padding_top" format="dimension" />
        <attr name="cb_image_padding_right" format="dimension" />
        <attr name="cb_image_padding_bottom" format="dimension" />
        <attr name="cb_image_scale_type" format="integer">
            <enum name="center" value="0" />
            <enum name="center_inside" value="1" />
            <enum name="center_crop" value="2" />
            <enum name="fit_center" value="3" />
            <enum name="fit_start" value="4" />
            <enum name="fit_end" value="5" />
            <enum name="fit_xy" value="6" />
        </attr>
        <attr name="cb_image_weight" format="integer" />

    </declare-styleable>
</resources>