<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">

        <attr name="bc_background_pressed" format="color" />
        <attr name="bc_background_disabled" format="color" />
        <attr name="bc_background" format="color" />
        <attr name="android:background" />

        <attr name="bc_text_color_pressed" format="color" />
        <attr name="bc_text_color_disabled" format="color" />
        <attr name="bc_text_color" format="color" />
        <attr name="bc_text_size" format="dimension" />
        <attr name="android:text" />
        <attr name="android:textColor" />

        <attr name="bc_shape_radius" format="dimension" />
        <attr name="bc_shape_type" format="integer">
            <enum name="rect" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <attr name="bc_stroke_color_pressed" format="color" />
        <attr name="bc_stroke_color_disabled" format="color" />
        <attr name="bc_stroke_color" format="color" />
        <attr name="bc_stroke_size" format="dimension" />

        <attr name="bc_elevation_enabled" format="boolean" />
    </declare-styleable>
</resources>